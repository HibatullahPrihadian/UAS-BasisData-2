            <a href="#"
              ><span class="material-symbols-outlined">logout</span
              ><span>Logout</span></a
            >
          </li>
        </ul>
      </div>

      <div class="container-input">
        <div class="container-header">
          <h1>Daftar Stok Barang</h1>
          <a href="/log" class="new-button"> Kembali </a>
        </div>
        <div class="index-table-wrapper">
          <div class="table-head">
            <span class="id-column">ID</span>
            <span class="name-column">Nama Customer</span>
            <span class="category-column">Total Belanja</span>
          </div>
          <ul class="table-body">
            <% data.forEach((loyal) => { %>
            <li>
              <div class="table-body">
                <span class="id-column"><%= loyal.idCustomer %></span>
                <span class="name-column"><%= loyal.namaCustomer %></span>
                <span class="category-column"><%= loyal.totalBelanja %></span>
              </div>
                </form>
            </li>
            <% }) %>
          </ul>
        </div>
      </div>
    </div>
